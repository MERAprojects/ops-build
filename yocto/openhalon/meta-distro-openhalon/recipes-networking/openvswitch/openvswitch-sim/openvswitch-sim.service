[Unit]
Description=Halon Switch Daemon for Simulator
After=ovsdb-server-sim.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=10
ExecStart=/sbin/ip netns exec swns /opt/openvswitch/sbin/ovs-vswitchd --no-chdir --pidfile --detach -vSYSLOG:INFO
WorkingDirectory=/var/run/openvswitch-sim
PIDFile=/var/run/openvswitch-sim/ovs-vswitchd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
