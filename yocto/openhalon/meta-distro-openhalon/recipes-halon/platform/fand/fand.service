[Unit]
Description=Halon Fan Daemon
After=ovsdb-server.service halon-init.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=7
ExecStartPre=/bin/rm -f /var/run/openvswitch/fand.pid
ExecStart=/sbin/ip netns exec nonet /usr/bin/fand --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/fand.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
