[Unit]
Description=Halon LED Daemon
After=ovsdb-server.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/ledd.pid
ExecStart=/usr/bin/ledd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ledd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
