[Unit]
Description=Halon System Daemon (sysd)
After=ovsdb-server.service halon-init.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/sysd.pid
ExecStart=/sbin/ip netns exec nonet /usr/bin/sysd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/sysd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
