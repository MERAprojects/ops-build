[Unit]
Description=Halon Temperature Daemon
After=sysd.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/tempd.pid
ExecStart=/usr/bin/tempd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/tempd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
