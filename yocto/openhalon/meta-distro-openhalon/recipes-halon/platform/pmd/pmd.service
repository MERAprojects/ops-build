[Unit]
Description=Halon Pluggable Module Daemon
After=sysd.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/pmd.pid
ExecStart=/usr/bin/pmd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/pmd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
