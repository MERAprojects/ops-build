# Halon 'bgpd' service script

[Unit]
Description=Halon BGPD Daemon
After=ovsdb-server.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/bgpd.pid
ExecStart=/usr/sbin/bgpd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/bgpd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
